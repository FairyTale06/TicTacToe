<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/centerhorizontaline"></RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/centerverticaline"></RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tic-Tac-Toe"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/banner"
        android:id="@+id/lay"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp">

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:background="@drawable/forbox"
            android:id="@+id/box1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img1"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_toEndOf="@id/box1"
            android:layout_marginLeft="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img2"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_toEndOf="@id/box2"
            android:layout_marginLeft="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img3"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_below="@id/box1"
            android:layout_marginTop="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img4"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_below="@id/box2"
            android:layout_toEndOf="@id/box4"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img5"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_toEndOf="@id/box5"
            android:layout_below="@id/box3"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box6">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img6"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_below="@id/box4"
            android:layout_marginTop="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box7">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img7"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_toEndOf="@id/box7"
            android:layout_marginLeft="30px"
            android:layout_below="@id/box5"
            android:layout_marginTop="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img8"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_toEndOf="@id/box8"
            android:layout_marginLeft="30px"
            android:layout_below="@id/box6"
            android:layout_marginTop="30px"
            android:background="@drawable/forbox"
            android:id="@+id/box9">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:id="@+id/img9"
                android:background="@drawable/img">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/box8"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Turn:"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="50dp"
                android:id="@+id/textturn"></TextView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/textturn"
                android:layout_marginTop="3sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/turn"
                >
            </ImageView>
        </RelativeLayout>


    </RelativeLayout>
    <android.widget.Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button1"
        android:text="Click To Restart"
        android:layout_marginBottom="3sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lay"
        ></android.widget.Button>



</RelativeLayout>